{
    "compilerOptions": {
        "target": "es6", //es5 is IE support.
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "ScriptHost"
        ],
        //"strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,

        //make this only DEV.
        "sourceMap": true,
        "inlineSources": true,

        "noEmitOnError": true,
        "noEmit": true,
        "watch": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "traceResolution" : true
    },
    "include": [
        "./ts/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./node/"
    ],
    "compileOnSave": true,
    "buildOnSave": true
}